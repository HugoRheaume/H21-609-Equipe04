<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AssociationActivity"
    android:background="@color/colorPrimary"
    >

    <AbsoluteLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:layout_width="600dp"
            android:layout_height="600dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/colorPrimaryLight"
            android:layout_x="150dp"
            android:layout_y="-200dp"/>

        <View
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/colorPrimaryLight"
            android:layout_x="-200dp"
            android:layout_y="450dp"/>

        <View
            android:layout_width="125dp"
            android:layout_height="250dp"
            android:background="@drawable/triangle"
            android:backgroundTint="@color/colorAccent"
            android:layout_x="300dp"
            android:layout_y="500dp"/>

    </AbsoluteLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginBottom="30dp"
        android:id="@+id/timeLimit"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tvTime"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/open_sans"/>

        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/progressTime"
            android:indeterminate="false"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progressDrawable="@drawable/progress_circle" />
    </LinearLayout>

    <TextView
        android:id="@+id/questionLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/lorem"
        android:textSize="40sp"
        android:textColor="@color/textColor"
        android:fontFamily="@font/titan_one"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/zoneAsso1"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/asso1"
            android:text="@string/lorem"
            android:textSize="16sp"
            android:background="@drawable/round_border"
            android:layout_marginTop="2dp"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/open_sans" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/asso2"
            android:text="@string/lorem"
            android:textSize="16sp"
            android:background="@drawable/round_border"
            android:layout_marginTop="2dp"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:visibility="invisible"
            android:textColor="@color/textColor"
            android:fontFamily="@font/open_sans"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/asso3"
            android:text="@string/lorem"
            android:textSize="16sp"
            android:background="@drawable/round_border"
            android:layout_marginTop="2dp"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:visibility="invisible"
            android:textColor="@color/textColor"
            android:fontFamily="@font/open_sans"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:id="@+id/placeholder1"
            android:layout_marginBottom="5dp"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/zoneAsso2"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/asso4"
            android:text="@string/lorem"
            android:textSize="16sp"
            android:background="@drawable/round_border"
            android:layout_marginTop="2dp"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/textColor"
            android:fontFamily="@font/open_sans"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/asso5"
            android:text="@string/lorem"
            android:textSize="16sp"
            android:background="@drawable/round_border"
            android:layout_marginTop="2dp"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:visibility="invisible"
            android:textColor="@color/textColor"
            android:fontFamily="@font/open_sans"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/placeholder2"
            android:layout_marginBottom="5dp"
            android:visibility="invisible"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="150dp"
                android:orientation="horizontal"
                android:background="@drawable/round_border"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/zoneCategory1"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/category1"
                        android:text="@string/lorem"
                        android:textSize="18sp"
                        android:textColor="@color/textColor"
                        android:fontFamily="@font/open_sans"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/borderColor"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/goodAnswerCategory1"
                        android:textSize="16sp"
                        android:background="@drawable/good_answers"
                        android:backgroundTint="@color/good"
                        android:padding="5dp"
                        android:paddingStart="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        android:textColor="@color/textColor"
                        android:fontFamily="@font/open_sans"/>

                </LinearLayout>

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/borderColor"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/zoneCategory2"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/category2"
                        android:text="@string/lorem"
                        android:textSize="18sp"
                        android:textColor="@color/textColor"
                        android:fontFamily="@font/open_sans"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/borderColor"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/goodAnswerCategory2"
                        android:textSize="16sp"
                        android:background="@drawable/good_answers"
                        android:backgroundTint="@color/good"
                        android:padding="5dp"
                        android:paddingStart="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        android:textColor="@color/textColor"
                        android:fontFamily="@font/open_sans"/>

                </LinearLayout>

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/borderColor"
                    android:id="@+id/separationCategory3"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/zoneCategory3"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/category3"
                        android:text="@string/lorem"
                        android:textSize="18sp"
                        android:textColor="@color/textColor"
                        android:fontFamily="@font/open_sans"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/borderColor"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/goodAnswerCategory3"
                        android:textSize="16sp"
                        android:background="@drawable/good_answers"
                        android:backgroundTint="@color/good"
                        android:padding="5dp"
                        android:paddingStart="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        android:textColor="@color/textColor"
                        android:fontFamily="@font/open_sans"/>

                </LinearLayout>

            </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lorem"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"
        android:visibility="invisible"
        android:textColor="@color/good"
        android:fontFamily="@font/titan_one"
        android:shadowColor="#000000"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nextQuestion"
        android:onClick="nextQuestion"
        android:text="@string/submitAnswer"
        android:textSize="20sp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button"
        android:textAllCaps="false"
        android:textColor="@color/textColor"
        android:fontFamily="@font/open_sans"/>

    <ProgressBar
        android:id="@+id/progressQuiz"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quizTitle"
        android:text="@string/lorem"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:fontFamily="@font/open_sans" />


</LinearLayout>
</RelativeLayout>