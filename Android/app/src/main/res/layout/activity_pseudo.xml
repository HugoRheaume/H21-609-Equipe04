<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".PseudoActivity">

    <TextView
        android:id="@+id/textViewChoosePseudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ChooseName"
        android:layout_marginBottom="15dp"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextPseudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/hintPseudo"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/buttonRejoindre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnParti"
        android:onClick="JoinWaitingRoom"/>

</LinearLayout>