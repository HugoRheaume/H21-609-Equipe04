<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <AbsoluteLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:layout_width="600dp"
            android:layout_height="600dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/colorPrimaryLight"
            android:layout_x="400dp"
            android:layout_y="-300dp"/>

        <View
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/colorPrimaryLight"
            android:layout_x="-200dp"
            android:layout_y="200dp"/>

        <View
            android:layout_width="125dp"
            android:layout_height="250dp"
            android:background="@drawable/triangle"
            android:backgroundTint="@color/colorAccent"
            android:layout_x="630dp"
            android:layout_y="170dp"/>

    </AbsoluteLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityLiveQuiz.LiveTrueFalseActivity"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="50dp">

            <Button
                android:id="@+id/btnTrue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/answerTrue"
                android:textSize="50sp"
                android:layout_marginEnd="10dp"
                android:onClick="verifyAnswer"
                android:background="@drawable/button_live"
                android:backgroundTint="@color/liveChoice1"
                android:textAllCaps="false"
                android:textColor="@color/textColor"
                android:fontFamily="@font/titan_one"
                />
            <Button
                android:id="@+id/btnFalse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/answerFalse"
                android:textSize="50sp"
                android:layout_marginStart="10dp"
                android:onClick="verifyAnswer"
                android:background="@drawable/button_live"
                android:backgroundTint="@color/liveChoice2"
                android:textAllCaps="false"
                android:textColor="#101010"
                android:fontFamily="@font/titan_one"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lorem"
            android:textSize="18sp"
            android:visibility="invisible" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressQuiz"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quizTitle"
        android:text="@string/lorem"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:fontFamily="@font/open_sans"/>


</LinearLayout>
</RelativeLayout>